{
  "name": "the-home-keeper",
  "version": "1.0.0",
  "description": "Smart home maintenance tracker for your property",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server -p 3000 -o",
    "build": "mkdir -p dist && cp *.html *.css *.js *.json *.svg dist/ 2>/dev/null || echo 'Build complete'",
    "ios": "npx cap run ios",
    "ios:build": "npx cap build ios",
    "ios:open": "npx cap open ios",
    "android": "npx cap run android",
    "android:build": "npx cap build android",
    "android:open": "npx cap open android",
    "capacitor:sync": "npx cap sync",
    "capacitor:copy": "npx cap copy",
    "capacitor:update": "npx cap update"
  },
  "keywords": [
    "home-maintenance",
    "pwa",
    "ios",
    "mobile-app",
    "productivity"
  ],
  "author": "Christine Fu",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/app": "^5.0.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "http-server": "^14.1.1",
    "typescript": "^5.9.2"
  }
}
